@model IEnumerable<ECommerce.Models.Product>


<html>
    <head>
        <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    
</html>
<body>
<div class="card-group col d-flex justify-content-flex-start">
    @foreach (var item in Model){
        <div class="row">
  <div class="card mx-auto">
    <img class="card-img-top" src="https://picsum.photos/200" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
      <p class="card-text"> @Html.DisplayFor(modelItem => item.Price) $</p>
      <p class="card-text"><small class="text-muted"> @Html.DisplayFor(modelItem => item.Tag.Name)</small></p>
      <p class="card-text"><small class="text-muted"> @Html.DisplayFor(modelItem => item.Category.Name)</small></p>
      <p id="sayi" class="card-text"><small class="text-muted"> @Html.DisplayFor(modelItem => item.Quantity)</small></p>
      <button itemid="aa" type="button" onclick="Azalt()" class="btn btn-primary">
          Buy
      </button>
               
            

    
    </div>
    
  </div>
  </div>
  }
  
</div>
<script>

</script>
</body>
